<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= folder.folderName %></title>
  <style>
  .dropbtn {
    background-color: #06a1ea;
    color: white;
    font-size: 16px;
    border: none;
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: #f1f1f1;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
  }

  .dropdown-content a {
    color: black;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {background-color: #ddd;}

  .dropdown:hover .dropdown-content {display: block;}

  .dropdown:hover .dropbtn {background-color: #3e8e41;}
</style>
</head>
<body>
  <h1><%= folder.folderName %></h1>
  <div class="dropdown">
    <button class="dropbtn">Options</button>
    <div class="dropdown-content">
      <a onclick="folderDialog.showModal()">Rename Folder</a>
      <a onclick="deleteDialog.showModal()">Delete Folder</a>
    </div>
  </div>
  <a href="/"><button>Home</button></a><br><br>
  <form action="/folder/upload/<%= folder.id %>" method="post" enctype="multipart/form-data">
    <input type="file" name="file" id="file"><br><br>
    <button type="submit" id="upload" >Upload</button>
  </form>

  <h2>Files</h2>
  <ul>
    <% files.forEach(file => { %>
      <li><a href="/files/<%= file.id %>"><%= file.fileName %></a></li>
    <% }) %>
  </ul>

  <dialog id='folderDialog'>
    <h2>Rename Folder</h2>
    <form action='/renameFolder/<%= folder.id %>' method="post">
      <label for="folderName">Name: <br>
        <input type="text" name="folderName" id="folderName" value='<%= folder.folderName %>'>
      </label>
      <button type="submit" >Rename</button>
      <button type="button" onclick="closeModal(1)">Cancel</button>
    </form>
  </dialog>

  <dialog id="deleteDialog">
    <h2>Are you sure you want to delete this folder?</h2>
    <form action="/deleteFolder/<%= folder.id %>" method="post">
      <button type="submit">Delete</button>
      <button type="button" onclick="closeModal(2)">Cancel</button>
    </form>
  </dialog>
</body>
  <script>
    const fileInput = document.getElementById('file');
    const uploadBtn = document.getElementById('upload');

    fileInput.addEventListener('change', function () {
      fileInput.files.length === 1 ? uploadBtn.disabled = false : uploadBtn.disabled = true;
    });

    const folderDialog = document.getElementById('folderDialog');
    const deleteDialog = document.getElementById('deleteDialog');
    const closeDialog = document.getElementById('closeDialog');

    folderDialog.addEventListener('submit', () => {
      closeModal();
    });

    function closeModal(num) {
      switch (num){
        case 1:
          folderDialog.close();
          break;
        case 2:
          deleteDialog.close();
          break;
        }
      
    }
  </script>
</html>