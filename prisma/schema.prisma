generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String 
  files Files[]
  folder Folder[]
}

model Files {
  id           Int      @id @default(autoincrement())
  fileName     String
  file         Bytes
  dateUploaded DateTime @default(now())
  fileSize     Int
  fileType     String
  filePath     String

  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
  folder Folder? @relation(fields: [folderId], references: [id])
  folderId  Int
}

model Folder{
  id          Int     @id @default(autoincrement())
  folderName  String

  user    User    @relation(fields: [userId], references: [id])
  userId  Int
  file Files[] 
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text  
  expiresAt   DateTime
}