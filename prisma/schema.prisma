generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String 
  files Files[]
}

model Files {
  id        Int     @id @default(autoincrement())
  fileName  String
  file      Bytes
  dateAdded DateTime @default(now())
  user    User    @relation(fields: [userId], references: [id])
  userId  Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text  // MediumText may be needed for MySql
  expiresAt   DateTime
}